<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="com.propertycross.ionic"
        version="1.0.0">

    <name>PropertyCross - Ionic</name>
    <description>
        An implementation of the PropertyCross app using the Ionic framework (http://ionicframework.com).
    </description>
    <author email="godds@scottlogic.com" href="http://www.scottlogic.com/blog/godds/">
        Graham Odds
    </author>

    <gap:platform name="ios" />
    <gap:platform name="android" />

    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />

    <icon src="icon.png" />
    <icon src="assets/icons/android/icon-36-ldpi.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="assets/icons/android/icon-48-mdpi.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="assets/icons/android/icon-72-hdpi.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="assets/icons/android/icon-96-xhdpi.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="assets/icons/ios/icon-57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="assets/icons/ios/icon-72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="assets/icons/ios/icon-57-2x.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="assets/icons/ios/icon-72-2x.png"         gap:platform="ios"        width="144" height="144" />

    <gap:splash src="assets/screen/android/screen-ldpi-portrait.png"        gap:platform="android" gap:density="ldpi"  />
    <gap:splash src="assets/screen/android/screen-mdpi-portrait.png"        gap:platform="android" gap:density="mdpi"  />
    <gap:splash src="assets/screen/android/screen-hdpi-portrait.png"        gap:platform="android" gap:density="hdpi"  />
    <gap:splash src="assets/screen/android/screen-xhdpi-portrait.png"       gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="assets/screen/ios/screen-ipad-portrait.png"            gap:platform="ios" width="768"  height="1004" />
    <gap:splash src="assets/screen/ios/screen-ipad-portrait-2x.png"         gap:platform="ios" width="1536" height="2008" />
    <gap:splash src="assets/screen/ios/screen-iphone-portrait.png"          gap:platform="ios" width="320"  height="480"  />
    <gap:splash src="assets/screen/ios/screen-iphone-portrait-2x.png"       gap:platform="ios" width="640"  height="960"  />
    <gap:splash src="assets/screen/ios/screen-iphone-portrait-568h-2x.png"  gap:platform="ios" width="640"  height="1136" />

    <gap:plugin name="org.apache.cordova.geolocation" />

    <access origin="*" />
</widget>
